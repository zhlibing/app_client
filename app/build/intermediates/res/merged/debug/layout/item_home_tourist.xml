<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/img_backgroud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/demo_backgroud" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparentBlank_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="@dimen/padding_common">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/normal_path_red"
                android:drawablePadding="@dimen/dp_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="故宫天安门三日游"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_title" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_common_v"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺宝光寺"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_titlesmall" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_distance"
            android:layout_width="@dimen/litter_img_width_height"
            android:layout_height="@dimen/litter_img_width_height"
            android:layout_margin="@dimen/padding_common_d"
            android:layout_toRightOf="@+id/tv_praise_number"
            android:background="@drawable/normal_location_fh"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_common_d"
            android:layout_toRightOf="@+id/img_distance"
            android:text="0.5Km"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/img_praise"
            android:layout_width="@dimen/litter_img_width_height"
            android:layout_height="@dimen/litter_img_width_height"
            android:layout_margin="@dimen/padding_common_d"
            android:background="@drawable/normal_like_fh"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_praise_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_common_d"
            android:layout_toRightOf="@+id/img_praise"
            android:text="1666人"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="45dp"
            android:background="@color/colorAccent_like"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="30"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_titlebar"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_10"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="2017"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_titlesmall"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="11月"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_titlesmall"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>

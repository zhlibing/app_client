<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="70dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/white"
    android:padding="@dimen/padding_common_d">

    <com.haozhang.lib.SlantedTextView
        android:id="@+id/tv_detail"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:slantedBackgroundColor="@color/qmui_config_color_red"
        app:slantedMode="left"
        app:slantedText="看点"
        app:slantedTextColor="@color/white"
        app:slantedTextSize="@dimen/textsize_small" />

    <com.coorchice.library.SuperTextView
        android:id="@+id/tv_add_num"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:corner="20dp"
        app:left_bottom_corner="true"
        app:left_top_corner="true"
        app:right_bottom_corner="true"
        app:right_top_corner="true"
        app:shaderEnable="true"
        app:shaderEndColor="@color/gold"
        app:shaderMode="rightToLeft"
        app:shaderStartColor="@color/colorAccent"
        app:solid="@color/colorAccent"
        app:stroke_color="@color/colorAccent"
        app:stroke_width="0dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="万达广场芜湖站"
        android:textColor="@color/colorTextContent"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/img_next"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/padding_common_v"
        android:src="@drawable/normal_youjiantou_green" />

</RelativeLayout>
